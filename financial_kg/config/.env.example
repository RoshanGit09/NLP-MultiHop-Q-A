# Environment variables for FinancialKG

# Google Gemini API
GEMINI_API_KEY=your_gemini_api_key_here

# Neo4j Database
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your_neo4j_password_here

# Optional: Vector Database (if using)
# PINECONE_API_KEY=your_pinecone_key
# PINECONE_ENV=your_environment

# Optional: InfluxDB (for time-series storage)
# INFLUXDB_URL=http://localhost:8086
# INFLUXDB_TOKEN=your_token
# INFLUXDB_ORG=your_org
# INFLUXDB_BUCKET=financial_kg

# HuggingFace (for dataset access)
HF_TOKEN=your_huggingface_token_here

# Kaggle (for dataset download)
KAGGLE_USERNAME=your_kaggle_username
KAGGLE_KEY=your_kaggle_api_key

# Data Paths
DATA_DIR=./data
CACHE_DIR=./cache
OUTPUT_DIR=./output

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/financial_kg.log

# Model Settings
GEMINI_MODEL_FAST=gemini-2.0-flash-exp
GEMINI_MODEL_PRO=gemini-1.5-pro-latest
GEMINI_EMBEDDING_MODEL=models/text-embedding-004
TEMPERATURE=0.0
MAX_RETRIES=3

# Processing Settings
MAX_WORKERS=8
BATCH_SIZE=40
CHUNK_SIZE=400

# Thresholds
ENTITY_THRESHOLD=0.8
RELATION_THRESHOLD=0.7
ENTITY_NAME_WEIGHT=0.8
ENTITY_LABEL_WEIGHT=0.2

# Real-time Settings
UPDATE_INTERVAL_MINUTES=15
ENABLE_REALTIME=false
